using UnityEngine;
using System.Collections;
using System.Collections.Generic;

namespace GameDataManager
{
    public class GameElementCountDictionary
    {
        private List<string> ids;
        private List<int> amounts;
        
        public string[] IDs
        {
            get
            {
                return ids.ToArray();
            }
            
            set
            {
                ids = new List<string>(value);
            }
        }
                
        public int[] Amounts
        {
            get
            {
                return amounts.ToArray();
            }
            set
            {
                amounts = new List<int>(value);
            }
        }
    }
}
